<!DOCTYPE html>
<head>
    <title>Tasks & Messages</title>
    <link rel="stylesheet" href="/styles.css"
</head>
<body>
    <ul style="">
        <h1>Tasks</h1>
        <% todos.forEach(function(todo) { %>
            <li>
                <form action="/tasks/<%= todo._id %>/update" method="post" style="display: inline;" >
                    <input type="text" name="task" id="task" value="<%- todo.task %>" size="50" style="height:70px; font-weight: 300px; font-size: 1.5rem;" />
                    
                    <button type="submit">Update</button>
                </form>
                <form action="/tasks/<%= todo._id %>/complete" method="post" >
                    <button type="submit">
                        <%= todo.is_completed ? 'Uncomplete' : 'Complete' %>
                    </button>
                </form>
                <form action="/tasks/<%= todo._id %>/delete" method="post" >
                    <button type="submit">Delete</button>
                </form>
            </li>
            <% }); %>
    </ul>
    <ul >
        <h1>Messages</h1>
        
        <% mesg.forEach(function(mess){ %>
            <li>
                <form action="/mes/<%= mess._id %>/update" method="post" style=="margin: 0;">
                <input type="text" name="mess_t" id="mess_t" value="<%- mess.mess_t %> "  style="height: 70px; font-size: 1.5rem; " size="50"/ />
                <button type="submit">Update</button>
                </form>
                <form action="/mes/<%= mess._id %>/sent" method="post" style="display: inline;">
                <button type="submit">
                    <%= mess.is_sent ? 'Unsend' : 'Send' %>
                </button>
                </form>
                <form action="/mes/<%= mess._id %>/delete" method="post" style="display: inline;">
                <button type="submit">Delete</button>
                </form>
            </li>
        
        <% }); %>
    </ul>
<div style="text-align: center;">
    <button id="exitButton" style="margin: auto; align-items : center;">EXIT</button>
</div>
    
    <script>
        const exitButton = document.getElementById('exitButton');

        exitButton.addEventListener('click', () => {
            window.location.href='/'

        })
    </script>
</body> 

</html>